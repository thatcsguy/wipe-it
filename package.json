{
  "name": "wipe-it",
  "version": "1.0.0",
  "description": "Browser-based 1-4 player raiding game with client-side prediction",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.client.json && node esbuild.config.js",
    "dev": "ts-node-dev --respawn src/server/index.ts",
    "start": "node dist/server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.8",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
